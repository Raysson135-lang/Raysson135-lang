from datetime import date

def calculadora_aniversario():
    hoje = date.today()
    print("=== Calculadora Inteligente de AniversÃ¡rios ===")
    escolha = input("VocÃª quer informar (1) a data de nascimento ou (2) apenas a idade? ")

    if escolha == "1":
        # UsuÃ¡rio informa a data de nascimento
        dia = int(input("Digite o dia de nascimento: "))
        mes = int(input("Digite o mÃªs de nascimento: "))
        ano = int(input("Digite o ano de nascimento: "))

        # Calcula idade
        idade = hoje.year - ano - ((hoje.month, hoje.day) < (mes, dia))

        print(f"\nğŸ“… VocÃª nasceu em {dia:02d}/{mes:02d}/{ano}.")
        print(f"ğŸ‚ Sua idade atual Ã© {idade} anos.")

    elif escolha == "2":
        # UsuÃ¡rio informa apenas a idade
        idade = int(input("Digite sua idade: "))
        ano_nascimento = hoje.year - idade
        print(f"\nğŸ‚ Se vocÃª jÃ¡ fez aniversÃ¡rio este ano, nasceu em {ano_nascimento}.")
        print(f"ğŸ‚ Se ainda nÃ£o fez, nasceu em {ano_nascimento - 1}.")
    else:
        print("OpÃ§Ã£o invÃ¡lida. Tente novamente.")

# Executa
calculadora_aniversario()